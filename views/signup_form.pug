extends layout

block content
  section.container-fluid.mt-4.d-flex.flex-column.justify-content-center.align-items-center
    if !user
      h1.mb-4 Sign up. Join the Club!
      form.signup(action="/club/sign-up" method="POST")
        div.form-group.row.mb-3
          div.col-6
            label.form-label(for="first_name") First Name
            input#first_name.form-control(type="text" name="first_name" placeholder="John" value=(undefined === user_signup ? "" : user_signup.first_name)) 
          div.col-6
            label.form-label(for="family_name") Family Name
            input#family_name.form-control(type="text" name="family_name" placeholder="Doe" value=(undefined === user_signup ? "" : user_signup.family_name))
        div.form-group.row.flex-column.mb-3
          div.col-6
            label.form-label(for="signup_username") Username
            input#signup_username.form-control(type="text" name="username" placeholder="username" value=(undefined === user_signup ? "" : user_signup.username)) 
        div.form-group.row.mb-3
            div.col-6
              label.form-label(for="signup_password") Password
              input#signup_password.form-control(type="password" name="password" placeholder="password")
            div.col-6
              label.form-label(for="signup_confirm") Confirm Password
              input#signup_confirm.form-control(type="password" name="confirm" placeholder="confirm password")  
        div.form-group.row.flex-column.mb-4
          div.col-6
            input#signup_admin.form-check-input(type="checkbox" name="admin" value="true")
            label.form-check-label(for="signup_admin") &nbsp;Admin account
        button.btn-submit-signup.btn.btn-primary(type="submit") Submit

      if errors
        ul.mt-4
          for error in errors
            li.text-danger!= error.msg

    else 
      h1.mb-4 Logout first before making a new account
            