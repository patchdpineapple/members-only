extends layout

block content
  section.container-fluid.mt-4.d-flex.flex-column.justify-content-center.align-items-center
    if user && user.membership === "Basic"
      h1.mb-4.text-center Wanna be an Exclusive member? Enter secret password.
      form.signup(action="/club/join" method="POST")
        div.form-group.row.mb-3
            div.col-12
              label.form-label(for="join_password") Secret Password
              input#join_password.form-control.form-control-lg(type="text" name="password" placeholder="")
              div.form-text.text-center #[em hint: "patch"]
        button.btn-submit-join.btn.btn-primary(type="submit") Submit

      if errors
        ul.mt-4
          for error in errors
            li.text-danger!= error.msg
      
    else if user && user.membership === "Exclusive"
      h1.mb-4 You are already an exclusive member

    else 
      h1.mb-4 Please login to join 
            